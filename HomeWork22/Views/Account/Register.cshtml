@model HomeWork22.AuthApp.UserRegistration
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Регистрация</h3>
            <form asp-action="Register" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <input asp-for="UserName" class="form-control" placeholder="Логин" />
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Пароль" />
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Повторите пароль" />
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <button type="submit" class="btn-danger">Зарегистрироваться</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
