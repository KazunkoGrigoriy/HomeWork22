@model HomeWork22.AuthApp.UserLogin
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Вход</h3>
            <form asp-controller="Account" asp-action="Login" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="returnUrl" />
                <div class="col-xl-12">
                    <div class="form-group">
                        <input asp-for="UserName" class="form-control" placeholder="Логин" />
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Пароль" />
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <button type="submit" class="btn-danger">Войти</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>