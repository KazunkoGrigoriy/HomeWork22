@using HomeWork22.Models

@{
}
<h1 class="text-black-50">Записная книжка</h1>
<div class="row">
    @foreach (Record item in Model)
    {
        <div class="col-sm-3">
            <div class="card-deck">
                <div class="card m-3">
                    <div class="text-center">
                        <h3>@item.LastName</h3>
                    </div>
                    <div>
                        <img class="card-img-top" photo src="~/photo/depositphotos_51402215-stock-illustration-male-avatar-profile-picture-use.jpg" />
                    </div>
                    <h4>
                        <a href="/Record/RecordPage" class="btn btn-info">ID: @item.ID</a>
                    </h4>
                    <h4>@item.FirstName</h4>
                    <h4>@item.MiddleName</h4><br />                   
                </div>
            </div>
        </div>
    }
</div>
<a asp-controller="Record" asp-action="Add">Добавить запись</a>